@{
    ViewBag.Title = "Contact";
}
@model VacationLocation.Models.FormModel

@using (Html.BeginForm())
{
    <fieldset>

        <!-- Form Name -->
        <legend>Formular</legend>
        @Html.Label("Varsta dumneavoastra:")
        @Html.TextBox("Age") <br />

        @Html.Label("Statut social")
        @Html.DropDownListFor(m=>m.selectedID, Model.status, "--Statut social--")

        <br />
        @Html.Label("Aveti copii?")
        @Html.RadioButton("hasKids", "Da", new { id="HasKids" }) Da
        @Html.RadioButton("hasKids", "Nu", new { id="NoKids"}) Nu

        @

        <!-- Text input-->
        <div class="control-group">
            <label class="control-label" for="locNatal">Localitate natală</label>
            <div class="controls">
                <input id="locNatal" name="locNatal" type="text" placeholder="" class="input-xlarge" required="">

            </div>
        </div>

        <!-- Text input-->
        <div class="control-group">
            <label class="control-label" for="domiciliuActual">Domiciliu actual</label>
            <div class="controls">
                <input id="domiciliuActual" name="domiciliuActual" type="text" placeholder="" class="input-xlarge" required="">

            </div>
        </div>

        <!-- Multiple Radios -->
        <div class="control-group">
            <label class="control-label" for="zonaClimatica">Ce zona climatică aţi dori sa vizitaţi:</label>
            <div class="controls">
                <label class="radio" for="zonaClimatica-0">
                    <input type="radio" name="zonaClimatica" id="zonaClimatica-0" value="Zonă caldă (Bazinul Amazonului,America de Sud, India )" checked="checked">
                    Zonă caldă (Bazinul Amazonului,America de Sud, India )
                </label>
                <label class="radio" for="zonaClimatica-1">
                    <input type="radio" name="zonaClimatica" id="zonaClimatica-1" value="Zonă temperată (Centrul si vestul Europei, coasta Americii si a Canadei)">
                    Zonă temperată (Centrul si vestul Europei, coasta Americii si a Canadei)
                </label>
                <label class="radio" for="zonaClimatica-2">
                    <input type="radio" name="zonaClimatica" id="zonaClimatica-2" value="Zonă rece (Polul Nord)">
                    Zonă rece (Polul Nord)
                </label>
            </div>
        </div>

        <!-- Multiple Radios -->
        <div class="control-group">
            <label class="control-label" for="dimensiuneOras">Ce tip de oraş preferaţi</label>
            <div class="controls">
                <label class="radio" for="dimensiuneOras-0">
                    <input type="radio" name="dimensiuneOras" id="dimensiuneOras-0" value="Oraş mare, aglomerat" checked="checked">
                    Oraş mare, aglomerat
                </label>
                <label class="radio" for="dimensiuneOras-1">
                    <input type="radio" name="dimensiuneOras" id="dimensiuneOras-1" value="Oraş mic, liniştit">
                    Oraş mic, liniştit
                </label>
                <label class="radio" for="dimensiuneOras-2">
                    <input type="radio" name="dimensiuneOras" id="dimensiuneOras-2" value="Sat/Comună/Zonă izolată">
                    Sat/Comună/Zonă izolată
                </label>
            </div>
        </div>

        <!-- Button -->
        <div class="control-group">
            <label class="control-label" for="formSubmit"></label>
            <div class="controls">
                <button id="formSubmit" name="formSubmit" class="btn btn-primary">Submit</button>
            </div>
        </div>


       

    </fieldset>
}
